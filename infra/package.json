{
  "name": "storyclunk-infra",
  "version": "1.0.0",
  "description": "AWS CDK infrastructure",
  "main": "bin/app.js",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "cdk": "cdk",
    "deploy": "cdk deploy --all --require-approval never --progress events",
    "deploy:preview": "cdk deploy --all --require-approval never --progress events",
    "deploy:dev": "cdk deploy --all --context environment=dev --require-approval never --progress events",
    "deploy:prod": "cdk deploy --all --context environment=prod --progress events",
    "destroy": "cdk destroy --all",
    "synth": "cdk synth",
    "diff": "cdk diff"
  },
  "dependencies": {
    "aws-cdk-lib": "^2.200.0",
    "constructs": "^10.4.2",
    "source-map-support": "^0.5.21"
  },
  "devDependencies": {
    "@types/node": "^22.16.5",
    "typescript": "^5.8.3",
    "aws-cdk": "^2.200.0",
    "ts-node": "^10.9.2"
  }
}

